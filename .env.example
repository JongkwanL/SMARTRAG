# Application Settings
APP_NAME=SmartRAG
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security
SECRET_KEY=change-this-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/smartrag
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=smartrag

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10
CACHE_TTL=3600

# Vector Database
VECTOR_DB_TYPE=faiss  # faiss or pgvector
FAISS_INDEX_PATH=/data/faiss_index
PGVECTOR_DIM=768

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu  # cpu or cuda
EMBEDDING_BATCH_SIZE=32
MAX_SEQ_LENGTH=512

# LLM Settings
LLM_MODEL=meta-llama/Llama-2-7b-chat-hf
LLM_API_URL=http://localhost:8001/v1
LLM_API_KEY=
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_STREAM=true

# vLLM Server Settings
VLLM_HOST=localhost
VLLM_PORT=8001
VLLM_MODEL_PATH=/models/llama-2-7b-chat-hf
VLLM_GPU_MEMORY_UTILIZATION=0.9
VLLM_MAX_MODEL_LEN=4096

# Document Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_DOCUMENT_SIZE_MB=100
SUPPORTED_FILE_TYPES=pdf,txt,md,html,docx

# Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=smartrag-documents
S3_REGION=us-east-1
USE_SSL=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=smartrag-api

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Performance
WORKER_COUNT=4
THREAD_POOL_SIZE=10
CONNECTION_POOL_SIZE=20
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=65